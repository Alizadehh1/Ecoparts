@model LoginFormModel
@{
    ViewData["Title"] = "Daxil ol";
}

<main class="main">
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="demo1.html"><i class="d-icon-home"></i></a></li>
                <li><a href="shop.html">EcoPart Onlayn Dükan</a></li>
                <li>Mənim Profilim</li>
            </ul>
        </div>
    </nav>
    <div class="page-content mt-6 pb-2 mb-10">
        <div class="container">
            <div class="login-popup">
                <div class="form-box">
                    <div class="tab tab-nav-simple tab-nav-boxed form-tab">
                        <ul class="nav nav-tabs nav-fill align-items-center border-no justify-content-center mb-5" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active border-no lh-1 ls-normal">Giriş</a>
                            </li>
                            <li class="delimiter">və ya</li>
                            <li class="nav-item">
                                <a class="nav-link border-no lh-1 ls-normal" asp-action="Register">Qeydiyyat</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="signin">
                                <form method="post">
                                    @if (!Html.ViewData.ModelState.IsValid)
                                    {
                                        <div class="form-group mb-3">
                                            <div asp-validation-summary="All" class="alert alert-danger text-white">
                                            </div>
                                        </div>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                                    {
                                        <div class="form-group mb-3">
                                            <div class="alert alert-danger text-white">
                                                @ViewBag.Message
                                            </div>
                                        </div>
                                    }
                                    <div class="form-group mb-3">
                                        <input class="form-control" asp-for="UserName" placeholder="E-Poçt və ya İstifadəçi Adı *" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Password" placeholder="Şifrə *" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <button class="btn btn-dark btn-block btn-rounded" type="submit">Giriş</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
