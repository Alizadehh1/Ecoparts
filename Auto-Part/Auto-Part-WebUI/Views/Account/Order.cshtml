@model OrderViewModel
<main class="main">
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb">
                <li><a asp-action="index" asp-controller="home"><i class="d-icon-home"></i></a></li>
                <li>Sifariş-#@Model.Order.Id</li>
            </ul>
        </div>
    </nav>
    <div class="page-content pt-10 pb-10 mb-2">
        <div class="container">
            <table class="shop-table wishlist-table mt-2 mb-4">
                <thead>
                    <tr>
                        <th class="product-name text-center"><span>Məhsul</span></th>
                        <th class='text-center'>Adı</th>
                        <th class="product-stock-status text-center"><span>Əsas Kod</span></th>
                        <th class="product-stock-status text-center"><span>Alternativ Kod</span></th>
                        <th class="product-price text-center"><span>Qiymət</span></th>
                        <th></th>
                        <th class="product-price text-center"><span>Ədəd</span></th>
                        <th class="product-price text-center"><span>Yekun</span></th>
                        <th class="product-add-to-cart"></th>
                    </tr>
                </thead>
                <tbody class="wishlist-items-wrapper">
                    @foreach (var item in Model.Order.OrderItems)
                    {
                        @foreach (var product in Model.Products)
                        {
                            if (product.Id == item.ProductId)
                            {
                                <tr>
                                    <td class="product-thumbnail d-flex justify-content-center">
                                        <a asp-action="details" asp-controller="shop" asp-route-id="@product.Id" asp-route-categoryId="@product.CategoryId">
                                            <figure>
                                                <img src="~/uploads/images/@product.ImagePath" width="100" height="100"
                                                     alt="@product.Name">
                                            </figure>
                                        </a>
                                    </td>
                                    <td class="product-name text-center">
                                        <a asp-action="details" asp-controller="shop" asp-route-id="@product.Id" asp-route-categoryId="@product.CategoryId">@product.Name sdadsasadsadsdaasdads</a>
                                    </td>
                                    <td class="product-name text-center">
                                        <a>@product.MainPartCodeName</a>
                                    </td>
                                    <td class="product-name text-center">
                                        <a>@product.PartCodeName</a>
                                    </td>
                                    <td class="product-price text-center">
                                        <span class="amount">@item.Price ₼</span>
                                    </td>
                                    <td>
                                        x
                                    </td>
                                    <td class="product-name text-center">
                                        <a>@item.Quantity əd</a>
                                    </td>
                                    <td class="product-price text-center">
                                        <span class="amount">@(item.Price * item.Quantity) ₼</span>
                                    </td>
                                    <td class="product-add-to-cart">
                                        <a asp-action="details" asp-controller="shop" asp-route-id="@product.Id" asp-route-categoryId="@product.CategoryId" class="btn-product btn-primary"><span>Detallı</span></a>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td class="product-price">
                            <span>Sifarişin ümumi məbləği: @Model.Order.TotalAmount₼</span>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</main>
