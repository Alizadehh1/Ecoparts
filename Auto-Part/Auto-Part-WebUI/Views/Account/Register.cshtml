@model RegisterFormModel
@{
    ViewData["Title"] = "Qeydiyyatdan Keç";
}

<main class="main">
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="demo1.html"><i class="d-icon-home"></i></a></li>
                <li><a href="shop.html">EcoPart Onlayn Dükan</a></li>
                <li>Mənim Profilim</li>
            </ul>
        </div>
    </nav>
    <div class="page-content mt-6 pb-2 mb-10">
        <div class="container">
            <div class="login-popup">
                <div class="form-box">
                    <div class="tab tab-nav-simple tab-nav-boxed form-tab">
                        <ul class="nav nav-tabs nav-fill align-items-center border-no justify-content-center mb-5" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link border-no lh-1 ls-normal" asp-action="SignIn">Giriş</a>
                            </li>
                            <li class="delimiter">və ya</li>
                            <li class="nav-item">
                                <a class="nav-link active border-no lh-1 ls-normal">Qeydiyyat</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="register">
                                <form method="post" asp-action="Register">
                                    
                                    <div asp-validation-summary="All"></div>
                                    @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                                    {
                                        <div class="form-group mb-3">
                                            <div class="alert alert-danger text-white">
                                                @ViewBag.Message
                                            </div>
                                        </div>
                                    }
                                    <div class="form-group mb-3">
                                        <input class="form-control" asp-for="Email" placeholder="Elektron Poçt *" />
                                    </div>
                                    <div class="form-group mb-3">
                                        <input class="form-control" asp-for="Name" placeholder="Ad *" />
                                    </div>
                                    <div class="form-group mb-3">
                                        <input class="form-control" asp-for="Surname" placeholder="Soyad *" />
                                    </div>
                                    <div class="form-group mb-3">
                                        <input class="form-control" asp-for="Username" placeholder="İstifadəçi adı *" />
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" asp-for="PhoneNumber" placeholder="Mobil Nömrə *" />
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" asp-for="StoreName" placeholder="Mağaza adı (Sosial şəbəkədə adı) *" />
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Adress" placeholder="Mağaza ünvanı *" />
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Password" placeholder="Şifrə *" />
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" asp-for="ConfirmPassword" placeholder="Şifrənin Təkrarını daxil edin *" />
                                    </div>
                                    <div class="form-footer">
                                        <div class="form-checkbox">
                                            <input type="checkbox" class="custom-checkbox" id="register-agree" name="register-agree"
                                                   required />
                                            <label class="form-control-label" for="register-agree">
                                                Qaydaları Qəbul Edirəm
                                            </label>
                                        </div>
                                    </div>
                                    <button class="btn btn-dark btn-block btn-rounded" type="submit">Qeydiyyatdan Keç</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
