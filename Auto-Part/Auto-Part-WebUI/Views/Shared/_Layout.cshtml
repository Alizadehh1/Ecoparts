</head>

<body class="home">

    <div class="page-wrapper">
        @await Component.InvokeAsync("Header")

        <main class="main">
            @RenderBody();
        </main>
        <footer class="footer">
            <div class="container">
                <div class="footer-top">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-lg-9">
