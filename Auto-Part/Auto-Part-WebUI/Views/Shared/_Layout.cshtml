        </footer>
    </div>
    <div class="sticky-footer sticky-content fix-bottom">
        <a asp-action="index" asp-controller="home" class="sticky-link active">
            <i class="d-icon-home"></i>
            <span>Ana Səhifə</span>
        </a>
        <a asp-action="Index" asp-controller="Shop" class="sticky-link">
            <i class="d-icon-volume"></i>
            <span>Məhsullar</span>
        </a>
        <a asp-controller="Shop" asp-action="Wishlist" class="sticky-link">
            <i class="d-icon-heart"></i>
            <span>Seçilmişlər</span>
        </a>
        <a asp-controller="account" asp-action="profile" class="sticky-link">
            <i class="d-icon-user"></i>
            <span>Profil</span>
        </a>
        <div class="header-search hs-toggle dir-up">
            <a href="#" class="search-toggle sticky-link">
                <i class="d-icon-search"></i>
                <span>Axtar...</span>
            </a>
            <form method="get" asp-controller="Shop" asp-action="Search" class="input-wrapper">
                <input type="text" class="form-control" id="search" name="query" placeholder="Məhsulun kodunu yazın" autocomplete="off"
                       required />
                <button class="btn btn-search" type="submit">
                    <i class="d-icon-search"></i>
                </button>
            </form>
        </div>
    </div>
    <a id="scroll-top" href="#" title="Top" role="button" class="scroll-top"><i class="d-icon-arrow-up"></i></a>

    @await Component.InvokeAsync("MobileMenu")
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/elevatezoom/jquery.elevatezoom.min.js"></script>
    <script src="~/assets/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

    <script src="~/assets/vendor/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/assets/vendor/isotope/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/jquery.plugin/jquery.plugin.min.js"></script>
    <script src="~/assets/vendor/jquery.countdown/jquery.countdown.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js" integrity="sha512-3j3VU6WC5rPQB4Ld1jnLV7Kd5xr+cq9avvhwqzbH/taCRNURoeEpoPBK9pDyeukwSxwRPJ8fDgvYXd6SkaZ2TA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/libs/toastr.js/toastr.min.js"></script>
    <script src="~/assets/js/main.min.js"></script>
    <script src="~/admin/files/assets/js/customize.js"></script>
    <script src="~/libs/tab-control/tab-control.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script>
        $(document).ready(function () {
            function showCardCount() {
                let items = ($.cookie('cards') || '').split(',');
                $('span.cart-count').html(items.length - 1);

            }
            showCardCount();
            function showCartPrice() {

                let prices = ($.cookie('prices') || '').split(',');
                let qtys = ($.cookie('qtys') || '').split(',');
                let totalPrice = 0;
                for (var i = 0; i < prices.length; i++) {
                    for (var j = 0; j < qtys.length; j++) {
                        totalPrice = totalPrice + prices[i] * qtys[j];
                    }
                }
                $('span.cart-price').html(totalPrice + "₼");
            }
            showCartPrice();
            function showWishlistCount() {
                let items = ($.cookie('cardsForWishlist') || '').split(',');
                $('.wishlist-count').html(items.length - 1);

            }
            showWishlistCount();
        });
        let btn = document.getElementById('btnSubs');
        $(document).ready(function () {
            $('#subscribeForm').submit(function (e) {
                e.preventDefault();
                let formData = new FormData(e.currentTarget);
                btn.disabled = true;
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Subscribe", "Home")",
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.error == true) {
                            e.currentTarget.reset();
                            btn.disabled = false;
                            toastr.error(response.message, 'Texniki xeta bash verdi!');
                            return;
                        }
                        e.currentTarget.reset();
                        btn.disabled = false;
                        toastr.success(response.message, 'Subscribe confirmation sent to your mail');
                    },
                    error: function (response) {
                        toastr.error(response.message, "Texniki Xeta!");
                        btn.disabled = false;
                    }

                });
            });

        });
    </script>
    @RenderSection("js", required: false)
</body>


</html>