@model Auto_Part_WebUI.Models.Entities.Product

@{
    ViewData["Title"] = "Details";
}
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Məhsul</h4>
                    @*<span>
                            lorem ipsum dolor sit amet, consectetur adipisicing
                            elit
                        </span>*@
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index" asp-controller="dashboard"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Məhsul</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="card p-3">
        <div class="card-block">
            <div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.Name</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Category" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.Category.Name</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Category.Brand" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.Category.Brand.Name</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ImagePath" style="display: flex; align-items: center;" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <img style="width:150px;" src="~/uploads/images/@Model.ImagePath" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ShortDescription" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.ShortDescription</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MainPartCodeName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.MainPartCodeName</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Alternativ Kodlar</label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.PartCodeName</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">@Model.Quantity ədəd</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Pricings" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @foreach (var price in ViewBag.Pricings)
                        {
                            if (Model.Id == price.ProductId)
                            {
                                foreach (var type in ViewBag.Types)
                                {
                                    if (type.Id == price.TypeId)
                                    {
                                        <p class="form-control">@price.Price&#8380;<span style="color: #aaa;margin-left:0.5rem;font-size:14px;">(@type.Name)</span></p>
                                    }
                                }
                            }
                        }

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-icon"><i class="icofont-pencil-alt-5"></i></a> |
                        <a asp-action="Index" class="btn btn-info btn-icon"><i class="icofont-arrow-left"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

